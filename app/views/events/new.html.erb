<h1>New event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :group_id %><br />
    <%= f.select :group_id, Group.find(:all).map { |group| [group.name, group.id] } %>
    <%= link_to 'Add a New Group', :controller => 'groups', :action => 'new' %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= f.select :location_id, Location.find(:all).map { |location| [location.name, location.id] } %>
    <%= link_to 'Add a New Location', :controller => 'locations', :action => 'new' %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
